# Firebase Admin SDK (from service account JSON)
# Get from: Firebase Console > Project Settings > Service Accounts > Generate New Private Key
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
# Note: The private key must be in quotes with actual newlines (\n), not literal \n
# Example: "-----BEGIN PRIVATE KEY-----\nMII...\n-----END PRIVATE KEY-----\n"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# SendGrid API Key
# Get from: SendGrid Dashboard > Settings > API Keys > Create API Key (Full Access)
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here

# SendGrid Sending Configuration
# The verified sender email in your SendGrid account
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME="Your Company Name"
# Where replies should go (can be same as FROM_EMAIL)
SENDGRID_REPLY_TO_EMAIL=your-email@yourdomain.com

# Google Places API Key
# Get from: Google Cloud Console > APIs & Services > Credentials > Create API Key
# Must enable: Places API (New)
GOOGLE_PLACES_API_KEY=your-google-places-api-key

# Base URL for unsubscribe links and emails
# Use: http://localhost:3000 for local dev
# Use: https://your-app.vercel.app for production
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Default User Info (used in email templates)
# These are placeholders for v1 - in v2, users will configure per campaign
DEFAULT_USER_NAME="Your Name"
DEFAULT_USER_COMPANY="Your Company Name"  # Optional, can leave blank

# Debug API Key (optional, for manual testing)
# Generate a random string: openssl rand -base64 32
# Required to use POST /api/send in production
DEBUG_API_KEY=your-secret-debug-key-here

# Cron Secret (optional, secures cron endpoints)
# Generate: openssl rand -hex 32
# Vercel adds this header automatically
CRON_SECRET=your-cron-secret-here
